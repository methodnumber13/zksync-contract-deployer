{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "pretty": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./globals.d.ts", "./node_modules/@types"],
    "skipLibCheck": true,
    "paths": {
      "*": ["*"]
    },
    "outDir": "build/index.js",
    "types": [
      "node",
      "express"
  ],
    // "noEmit": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["deploy", "helpers"],
  "exclude": ["node_modules", "build", "dist", "public", "webpack", "jest"]
}
